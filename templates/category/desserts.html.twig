{% extends 'base.html.twig' %}


{% block title %}Desserts
{% endblock %}

{% block body %}
<div class="space"></div>
<div class="titrePage"><h1>Desserts</h1></div>
	

	<div class="parent">
		{% for article in articles %}


			<div class="card">
				<h3 class="titreColor">{{article.title}}</h3>
				
				<div class="visual">
					<img class="picture" src="{{ asset('pictures/articles/' ~ article.picture)}}" alt="{{ article.picture }}">
				</div>
                <p>{{article.description}}</p>
			</div>

		{% endfor %}
	</div>

{% endblock %}
